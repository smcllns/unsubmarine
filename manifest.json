{
  "manifest_version": 2,
  "name": "Unsubmarine",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/index.js"]
    }
  ],
  "background": {
    "scripts": ["background/index.js", "hot-reload.js"]
  },
  "web_accessible_resources": [
    "background/*.js",
    "content/*.js",
    "images/*.png"
  ],
  "browser_action": {
    "default_icon": "images/icon-unsubmarine.png"
  }
}
