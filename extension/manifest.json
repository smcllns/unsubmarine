{
  "manifest_version": 2,
  "name": "Unsubmarine",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content/bundle.js"],
      "css": ["content/bundle.css"]
    }
  ],
  "background": {
    "scripts": ["background/bg.js", "background/hot-reload.js"]
  },
  "web_accessible_resources": [
    "background/*.js",
    "content/bundle.*",
    "images/*.png"
  ],
  "browser_action": {
    "default_icon": "images/icon-unsubmarine-round.png"
  }
}
